<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Hasil Penyakit</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="css/style.css" />
    <style>
      body {
        background-color: #f8f9fa;
      }

      .container-fluid {
        max-width: 960px;
        margin: 0 auto;
        padding: 20px;
      }

      h1 {
        color: #098486;
        font-weight: bold;
        margin-bottom: 30px;
      }

      h3 {
        color: #000000;
        font-weight: 600;
        margin-top: 30px;
        margin-bottom: 20px;
      }

      h4 {
        color: #2b2d2e;
        font-weight: 700;
        margin-top: 15px;
      }

      h5 {
        font-weight: 600;
        color: #3f3f3f;
      }

      p {
        color: #3f3f3f;
        font-size: 1rem;
        line-height: 1.5;
      }

      .disease-card {
        background-color: #ffffff;
        border-radius: 8px;
        padding: 20px;
        margin-bottom: 20px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
      }

      .disease-card:hover {
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        transform: translateY(-5px);
        transition: all 0.3s ease-in-out;
      }

      /* Responsive Design */
      @media (max-width: 768px) {
        .container-fluid {
          padding: 15px;
        }
      }
    </style>
  </head>
  <body>
    <%- include('partials/navbar') %>
    <div class="wrap-none p-4">
      <div class="container-fluid">
        <h1 class="text-center text-white">
          Identifikasi Penyakit dan Masalah Kesehatan
        </h1>
        <% if (diseases && diseases.length > 0) { %>
        <h3>Hasil Identifikasi:</h3>
        <% diseases.forEach(function(disease) { %>
        <div class="disease-card">
          <h4><%= disease.name %></h4>
          <p><%= disease.description %></p>

          <h5>Penyebab:</h5>
          <ul>
            <% disease.causes.forEach(function(cause) { %>
            <li><%= cause.cause %></li>
            <% }); %>
          </ul>

          <h5>Pengobatan:</h5>
          <ul>
            <% disease.treatments.forEach(function(treatment) { %>
            <li><%= treatment.treatment %></li>
            <% }); %>
          </ul>

          <h5>Gejala:</h5>
          <ul>
            <% disease.symptoms.forEach(function(symptom) { %>
            <li><%= symptom.symptom %></li>
            <% }); %>
          </ul>
        </div>
        <% }); %> <% } else { %>
        <p class="text-center">Tidak ada data penyakit yang ditemukan.</p>
        <% } %>
        <div class="d-flex justify-content-center">
          <a href="/identifikasi" class="btn btn-primary back-button"
            >Kembali</a
          >
        </div>
      </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
