<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Berita Budidaya</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="css/style.css" />
  </head>
  <body>
    <%- include('partials/navbar') %>
    <div class="wrap-none p-4">
      <div class="container-fluid">
        <div class="m-auto" style="width: 100%; padding-bottom: 120px">
          <h1
            class="text-align-center text-center text-white"
            style="font-weight: 700; margin-bottom: 70px"
          >
            Berita Budidaya Laut
          </h1>
          <div
            class="row d-flex flex-wrap justify-content-center"
            style="gap: 100px"
          >
            <% kesehatan.forEach((item) => { %>
            <div class="col-lg-6 card-kesehatan">
              <div
                class="img-kesehatan"
                style="
                  background-image: url('img/upload/kesehatan/<%= item.image %>');
                "
              ></div>
              <h4><%= item.title %></h4>
              <br>
              <p style="text-align: justify; font-size: 17px; color: #007dab">
                <%= item.descripton %>
              </p>
              <a
                href="<%= item.link && !item.link.startsWith('http') ? `https://${item.link}` : item.link %>"
                class="btn btn-primary"
                target="_blank"
                rel="noopener noreferrer"
                >Lihat Detail</a
              >
            </div>
            <% }) %>
          </div>
        </div>
      </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
